<div class="well">
  <div class="controls">
    {{#view view.playbackControl}}
      <i {{bindAttr class="view.playbackIcon"}}></i>
    {{/view}}
    <a {{action "thumbsUp" target="view"}} class="btn btn-large"><i class="icon-thumbs-up"></i></a>
    <a {{action "thumbsDown" target="view"}} class="btn btn-large"><i class="icon-thumbs-down"></i></a>
  </div>
</div>

{{#view view.playbackProgress}}
  <div class="bar" {{bindAttr style="view.style"}}></div>
{{/view}}

<div class="well track-info">
  <div class="row-fluid">
    <div class="span4">
      <a target="_blank" {{bindAttr href="view.itunesLink"}}><img {{bindAttr src="view.smallAlbumArtUrl"}} /></a>
    </div>
    <div class="span8">
      <h2>{{view.controller.content.name}}</h2>
      <h3>{{view.controller.content.artistName}}</h3>
      <h3><em>{{view.controller.content.album.name}} ({{view.controller.content.album.released}})</em></h3>
      {{#if view.fromPlaylist}}
        playing from pool
      {{else}}
        requested by:
        <h3>{{view.requestedBy}}</h3>
      {{/if}}
    </div>
  </div>
</div>
