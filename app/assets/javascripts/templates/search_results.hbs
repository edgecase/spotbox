{{#if view.showContent}}
  <table class="table table-striped track-list">
    <div class"btn-group">
      {{#view view.categoryButton name="itunes"}}
        {{view.name}}
      {{/view}}
      {{#view view.categoryButton name="spotify"}}
        {{view.name}}
      {{/view}}
    </div>
    <thead>
      <tr>
        <th><a href="#" {{action "setSortKey"}} data-key="name">Track</a></th>
        <th><a href="#" {{action "setSortKey"}} data-key="artistName">Artist</a></th>
        <th><a href="#" {{action "setSortKey"}} data-key="displayDuration">Time</a></th>
        <th><a href="#" {{action "setSortKey"}} data-key="albumName">Album</a></th>
        <th><a href="#" {{action "setSortKey"}} data-key="releaseDate">Year</a></th>
        <th>Actions</th>
      </tr>
    </head>
    <tbody>
      {{#each view.content}}
        {{#view view.searchResultsItem contentBinding="this"}}
          <td>{{view.content.name}}</td>
          <td>{{view.content.artistName}}</td>
          <td>{{view.content.displayDuration}}</td>
          <td>{{view.content.album.name}}</td>
          <td>{{view.content.album.released}}</td>
          <td><a class="btn btn-success" {{action "enqueue"}}>Enqueue</a></td>
        {{/view}}
      {{/each}}
    </tbody>
  </table>
{{/if}}
